{
  "compilerOptions": {
    // base options
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax":false,
    "allowJs": true,
    // "resolveJsonModule": true,
    "moduleDetection": "force",

    // strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,

    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,

    "lib": ["ES2022"],
    "declaration": true,

    "composite": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
